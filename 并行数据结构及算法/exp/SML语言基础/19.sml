fun vectorSum (vec : int vector, low, high) =
    if low > high then 0
    else if low = high then Vector.sub(vec, low)
    else
        let
            val mid = (low + high) div 2
            val sumLeft = vectorSum (vec, low, mid)
            val sumRight = vectorSum (vec, mid + 1, high)
        in
            sumLeft + sumRight
        end

